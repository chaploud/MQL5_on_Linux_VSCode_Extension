{
  "name": "MQL5",
  "scopeName": "source.mql55",
  "fileTypes": ["mq5", "mqh"],
  "foldingStartMarker": "(^.)?\\{",
  "foldingStopMarker": "(^\\s*)?\\}",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "comment": "double-quoted strings",
      "name": "string.quoted.double.mql5",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.mql5"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.mql5"
        }
      },
      "patterns": [
        {
          "include": "#escape_characters"
        }
      ]
    },
    {
      "comment": "single-quoted strings",
      "name": "string.quoted.single.mql5",
      "begin": "'",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.mql5"
        }
      },
      "end": "'",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.mql5"
        }
      },
      "patterns": [
        {
          "include": "#escape_characters"
        }
      ]
    },
    {
      "comment": "include paths",
      "name": "string.other.mql5",
      "begin": "(#include)(?:\\s*)(<)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control.preprocessor.mql5"
        },
        "2": {
          "name": "punctuation.definition.string.begin.mql5"
        }
      },
      "end": ">",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.mql5"
        }
      }
    },
    {
      "comment": "preprocessor directives",
      "name": "keyword.control.preprocessor.mql5",
      "match": "#\\b(define|else|endif|ifdef|ifndef|import|include|package|property|resource|undef)\\b"
    },
    {
      "comment": "unknown keywords",
      "name": "keyword.other.unknown.mql5",
      "match": "\\b(as|bitmap|defined|trash)\\b"
    },
    {
      "comment": "boolean",
      "name": "constant.language.boolean.mql5",
      "match": "\\b(true|false)\\b"
    },
    {
      "comment": "data structures",
      "name": "storage.type.data.mql5",
      "match": "\\b(class|enum|export|inline|interface|namespace|struct|template|this|typedef|typename|union)\\b"
    },
    {
      "comment": "data types",
      "name": "storage.type.mql5",
      "match": "\\b(bool|char|color|complex|complexf|datetime|double|float|int|long|matrix|matrix<complex>|matrix<complexf>|matrix<double>|matrix<float>|matrixc|matrixcf|matrixf|short|string|uchar|uint|ulong|ushort|unsigned|vector|vector<complex>|vector<complexf>|vector<double>|vector<float>|vectorc|vectorcf|vectorf|void)\\b"
    },
    {
      "comment": "access modifiers (specifiers)",
      "name": "storage.modifier.mql5",
      "match": "\\b(const|delete|final|override|private|protected|public|virtual)\\b"
    },
    {
      "comment": "memory classes",
      "name": "storage.modifier.memory.mql5",
      "match": "\\b(extern|group|input|sinput|static)\\b"
    },
    {
      "comment": "control operators",
      "name": "keyword.control.mql5",
      "match": "\\b(break|case|continue|default|do|else|for|if|return|switch|while)\\b"
    },
    {
      "comment": "other operators",
      "name": "keyword.other.mql5",
      "match": "\\b(delete|dynamic_cast|new|offsetof|operator|pack|sizeof)\\b"
    },
    {
      "comment": "predefined macro",
      "name": "variable.language.macro.mql5",
      "match": "\\b(__COUNTER__|__CPU_ARCHITECTURE__|__DATETIME__|__DATE__|__FILE__|__FUNCSIG__|__FUNCTION__|__INCLUDE_LEVEL__|__LINE__|__MQL4BUILD__|__MQL5BUILD__|__MQL5__|__MQLBUILD__|__MQL__|__PATH__|__RANDOM__|__forceinline|__inline)\\b"
    },
    {
      "comment": "macro",
      "name": "variable.language.macro.mql5",
      "match": "\\b(_DEBUG|_RELEASE)\\b"
    },
    {
      "comment": "predefined variables",
      "name": "variable.language.predefined.mql5",
      "match": "\\b(_AppliedTo|_CriticalError|_Digits|_IsX64|_LastError|_Period|_Point|_RandomSeed|_ReturnedDouble|_ReturnedFloat|_ReturnedString|_StopFlag|_Symbol|_UninitReason)\\b"
    },
    {
      "comment": "operators",
      "match": "=|\\+|\\-|<|>|!|\\*|/|%|&|\\||~|\\^|,|:|\\?|;",
      "name": "punctuation.definition.operator.mql5"
    },
    {
      "comment": "brackets",
      "name": "punctuation.definition.brackets.mql5",
      "match": "\\(|\\)|\\[|\\]"
    },
    {
      "include": "#builtin_structs"
    },
    {
      "include": "#builtin_indicators"
    },
    {
      "include": "#builtin_functions"
    },
    {
      "include": "#builtin_colors"
    },
    {
      "include": "#builtin_enums"
    },
    {
      "include": "#builtin_errors"
    },
    {
      "include": "#builtin_constants"
    },
    {
      "comment": "string constants",
      "name": "constant.string.mql5",
      "match": "\\b\\w+\\b"
    },
    {
      "comment": "decimal integer and float numeric constants",
      "name": "constant.numeric.decimal.mql5",
      "match": "\\b([0-9]*\\.?[0-9]+([eE][-+]?[0-9]+)?)\\b"
    },
    {
      "comment": "hexadecimal numeric constants",
      "name": "constant.numeric.hex.mql5",
      "match": "\\b(0[xX][0-9a-fA-F]+)\\b"
    },
    {
      "comment": "color, datetime and binary numeric constants",
      "name": "constant.numeric.other.mql5",
      "match": "([CDB]\\'[0-9a-fA-FxX\\.\\:\\,\\s]*\\')"
    },
    {
      "comment": "other variables",
      "name": "variable.other.mql5",
      "match": "\\b([a-zA-Z_]+[a-zA-Z0-9_]*)\\b"
    },
    {
      "comment": "code blocks",
      "name": "meta.block.mql5",
      "begin": "(\\{)",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.block.begin.mql5"
        }
      },
      "end": "(\\})",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.block.end.mql5"
        }
      },
      "patterns": [
        {
          "include": "$self"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "comment": "block comments",
          "name": "comment.block.mql5",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "comment": "single-line comments",
          "name": "comment.line.double-slash.mql5",
          "begin": "//",
          "end": "$\\n?"
        }
      ]
    },
    "escape_characters": {
      "patterns": [
        {
          "comment": "escape characters",
          "name": "constant.character.escape.mql5",
          "match": "\\\\."
        }
      ]
    },
    "builtin_structs": {
      "patterns": [
        {
          "comment": "MQL5 built-in structs",
          "name": "support.class.mql5",
          "match": "\\b()\\b"
        }
      ]
    },
    "builtin_indicators": {
      "patterns": [
        {
          "comment": "MQL5 built-in indicators",
          "name": "support.function.mql5",
          "match": "\\b()\\b"
        }
      ]
    },
    "builtin_functions": {
      "patterns": [
        {
          "comment": "MQL5 built-in functions",
          "name": "entity.name.function.mql5",
          "match": "\\b()\\b"
        }
      ]
    },
    "builtin_colors": {
      "patterns": [
        {
          "comment": "MQL5 built-in colors",
          "name": "support.constant.mql5",
          "match": "\\b()\\b"
        }
      ]
    },
    "builtin_enums": {
      "patterns": [
        {
          "comment": "MQL5 built-in enums",
          "name": "support.class.mql5",
          "match": "\\b()\\b"
        }
      ]
    },
    "builtin_errors": {
      "patterns": [
        {
          "comment": "MQL5 built-in errors",
          "name": "support.constant.mql5",
          "match": "\\b()\\b"
        }
      ]
    },
    "builtin_constants": {
      "patterns": [
        {
          "comment": "MQL5 built-in constants",
          "name": "support.constant.mql5",
          "match": "\\b()\\b"
        }
      ]
    }
  }
}
